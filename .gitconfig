[user]
name = shreve
email = eric@shreve.dev

[core]
  editor = vim
  pager = diff-so-fancy | less --tabs=4 -RFX
  excludesfile = ~/.global_gitignore

[init]
  defaultBranch = main

[interactive]
	diffFilter = diff-so-fancy --patch

[color]
	ui = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[help]
	autocorrect = 1

[alias]
	uncommit = "reset HEAD~"
	backtrack = "rebase -i HEAD~10"
